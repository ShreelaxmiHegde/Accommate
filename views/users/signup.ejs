<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <h1 class="border-bottom pb-2">SignUp on Accommate</h1>
        <form action="/signup" method="POST" class="needs-validation pt-3" novalidate>
            <!-- username -->
            <div class="mb-3">
                <label for="username" class="form-label">Username : </label>
                <input type="text" name="username" id="username" class="form-control" required>

                <div class="invalid-feedback">Enter a valid username.</div>
            </div>

            <!-- email -->
            <div class="mb-3">
                <label for="email" class="form-label">Email : </label>
                <input type="email" name="email" id="email" class="form-control" required>

                <div class="invalid-feedback">Enter a valid Email.</div>
            </div>

            <!-- password -->
             <div class="mb-3">
                <label for="password" class="form-label">Password : </label>
                <input type="password" name="password" id="password" class="form-control" required>

                <div class="invalid-feedback">Give your space a valid name.</div>
            </div>

            <button class="btn btn-primary">SignUp</button>
        </form>
    </div>
</div>