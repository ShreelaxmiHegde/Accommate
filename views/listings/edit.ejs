<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2">
        <h3 class="text-center">Manage your property details.</h3>
        <h6 class="border-bottom pb-3 text-center fst-italic">--- Keep your stay info up-to-date so students can find you easily. ---</h6>
        
        <form action="/listings/<%= listing._id%>?_method=PUT" method="post" class="pt-3">
            <div class="mb-3">
                <label for="title" class="form-label">Title : </label>
                <input type="text" name="listing[title]" id="title" value="<%= listing.title %>" class="form-control">
            </div>
            <div class="mb-3">
                <label for="desc" class="form-label">Description : </label>
                <textarea name="listing[desc]" id="desc" class="form-control"><%= listing.desc %></textarea>
            </div>
        
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="location" class="form-label">Location : </label>
                    <input type="text" name="listing[location]" id="location" value="<%= listing.location %>" class="form-control">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="state" class="form-label">State : </label>
                    <input type="text" name="listing[state]" id="state" value="<%= listing.state %>" class="form-control">
                </div>
            </div>
        
            <div class="row">
                <div class="mb-3 col-md-6">
                    <label for="price" class="form-label">Price : </label>
                    <input type="text" name="listing[price]" id="price" value="<%= listing.price %>" class="form-control">
                </div>
                <div class="mb-3 col-md-6">
                    <label for="capacity" class="form-label">Capacity : </label>
                    <input type="number" name="listing[capacity]" id="capacity" value="<%= listing.capacity %>" class="form-control">
                </div>
            </div>
        
            <div class="mb-3">
                <label for="image" class="form-label">Image URL : </label>
                <input type="text" name="listing[image]" id="image" value="<%= listing.image %>" class="form-control">
            </div>
        
            <button class="btn btn-primary edit-btn ps-4 pe-4">Edit</button>
        </form>
    </div>
</div>